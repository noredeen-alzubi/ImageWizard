<div class="ui container single">
  <h2>Fast Multi-image Upload</h2>
  <p>Supported types: JPG, JPEG, PNG</p>
  <br/>
  <form id="bulk-upload" name="bulk" class="ui form" enctype="multipart/form-data" action="/images" accept-charset="UTF-8" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="field">
      <label for="image_pictures">Pictures</label>
      <input multiple="multiple" id="files" accept=".jpeg, .png" type="file" name="image[picture][]">
    </div>
    <div class="actions text-center">
      <input type="submit" name="commit" value="Upload" class="ui primary button" data-disable-with="Upload">
    </div>
  </form>
  <br/>
  <br/>
  <div class="ui container center half-width">
    <div class="ui segments" id="bulk-progress">
    </div>
  </div>
</div>

<%= javascript_pack_tag 'bulk' %>